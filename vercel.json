{
  "version": 2,
  "buildCommand": "npm run build:widget",
  "outputDirectory": "apps/widget/dist",
  "installCommand": "npm install",
  "routes": [
    {
      "src": "/widget.js",
      "dest": "/widget.js"
    },
    {
      "src": "/style.css",
      "dest": "/style.css"
    },
    {
      "src": "/widget.js.map",
      "dest": "/widget.js.map"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, OPTIONS"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}

